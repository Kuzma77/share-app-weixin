/* pages/personal/personal.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 20rpx;
}

.no-user{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-top: 100rpx;
}

.btn{
  color: #fff;
  background-color: #FF4444;
  margin-top: 50rpx;
}

.no-user image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.my-info{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.user{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.user image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.user text{
  margin-bottom: 20rpx;
}

.qiandao{
  padding: 10rpx;
  background-color: rgb(19, 140, 19);
  color: #fff;
  font-size: 28rpx;
  width: 100rpx;
  text-align: center;
}

.manage-item{
  padding: 20rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(128, 128, 128,0.5);
}

