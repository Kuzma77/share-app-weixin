<!--pages/duihuanSuccess/duihuanSuccess.wxml-->
<view class="container">
<text class="title">{{share.title}}</text>
<text>作者：{{share.author}}</text>

<view class="summary">
<text selectable>{{share.summary}}</text>
</view>

<image src="{{share.cover}}"></image>

<view class="duihuan">
<text>积分：</text>
<text class="price">$ {{share.price}}</text>
<text class="btn" data-item="{{share}}" bindtap="exchange">兑换</text>
</view>

</view>
